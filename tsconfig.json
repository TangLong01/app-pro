{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@style/*": ["style/*"]
    },
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "moduleResolution": "node",
  "esModuleInterop": true,
  "skipLibCheck": true,
  "strict": true
}
